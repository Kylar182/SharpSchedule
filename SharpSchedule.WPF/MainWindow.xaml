<Window x:Class="SharpSchedule.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpSchedule.WPF"
        xmlns:controls="clr-namespace:SharpSchedule.Controls"
        mc:Ignorable="d"
        Title="Sharp Schedule" Height="1080" Width="1920">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    
    <controls:NavBar DataContext="{Binding Navigator}" Grid.Row="0" />

    <ContentControl Grid.Row="1" Content="{Binding Navigator.CurrentVM}" />
  </Grid>
</Window>
