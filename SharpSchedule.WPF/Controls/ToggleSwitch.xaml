<UserControl x:Class="SharpSchedule.Controls.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpSchedule.Controls"
             mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>

    <local:ToggleBase x:Name="inputBind" Checked="InputBind_Checked"
                      Unchecked="InputBind_Unchecked" />
    <TextBlock Grid.Row="1" x:Name="helperText" Foreground="{StaticResource WGU}" 
               HorizontalAlignment="Center" Margin="0,5,0,0" />
  </Grid>
</UserControl>
